{
	"name": "@joyfulwork/practice",
	"version": "0.1.0",
	"private": true,
	"main": "index.ts",
	"scripts": {
		"clean": "git clean -xdf .cache .expo .turbo android ios node_modules",
		"dev": "expo start --dev-client",
		"setup-ipad": "expo device:create",
		"dev:android": "expo start --android",
		"dev:ios": "expo start --ios",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"format": "biome format",
		"lint": "biome lint",
		"typecheck": "tsc --noEmit",
		"test": "jest --watch --coverage=false --changedSince=origin/main",
		"testDebug": "jest -o --watch --coverage=false",
		"testFinal": "jest",
		"updateSnapshots": "jest -u --coverage=false"
	},
	"op-sqlite": {
		"sqlcipher": true,
		"crsqlite": true,
		"performanceMode": "1",
		"iosSqlite": false,
		"sqliteFlags": "-DSQLITE_DQS=0",
		"fts5": true,
		"rtree": true,
		"libsql": true,
		"sqliteVec": true
	},
	"jest": {
		"preset": "jest-expo",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/coverage/**",
			"!**/node_modules/**",
			"!**/babel.config.js",
			"!**/expo-env.d.ts",
			"!**/.expo/**"
		]
	},
	"dependencies": {
		"@bacons/text-decoder": "^0.0.0",
		"@expo/metro-config": "^0.18.11",
		"@expo/vector-icons": "^14.0.3",
		"@react-native-replicache/react-native-expo-sqlite": "^1.3.1",
		"@shopify/flash-list": "1.7.1",
		"@tanstack/react-query": "catalog:",
		"@trpc/client": "catalog:",
		"@trpc/react-query": "catalog:",
		"@trpc/server": "catalog:",
		"expo": "~51.0.38",
		"expo-constants": "~16.0.2",
		"expo-crypto": "^13.0.2",
		"expo-dev-client": "~4.0.28",
		"expo-linking": "~6.3.1",
		"expo-router": "~3.5.23",
		"expo-secure-store": "^13.0.2",
		"expo-splash-screen": "~0.27.6",
		"expo-sqlite": "^14.0.6",
		"expo-status-bar": "~1.12.1",
		"expo-web-browser": "^13.0.3",
		"nativewind": "~4.0.36",
		"react": "catalog:react18",
		"react-dom": "catalog:react18",
		"react-native": "~0.74.6",
		"react-native-crypto": "^2.2.0",
		"react-native-css-interop": "~0.0.36",
		"react-native-gesture-handler": "~2.20.0",
		"react-native-reanimated": "~3.10.1",
		"react-native-safe-area-context": "~4.10.5",
		"react-native-screens": "~3.34.0",
		"react-native-sse": "^1.2.1",
		"react-native-svg": "15.2.0",
		"react-native-web": "~0.19.10",
		"replicache": "^15.0.1",
		"replicache-react": "^5.0.1",
		"superjson": "2.2.1"
	},
	"devDependencies": {
		"@babel/core": "^7.25.8",
		"@babel/preset-env": "^7.25.8",
		"@babel/runtime": "^7.25.7",
		"@biomejs/biome": "catalog:",
		"@joyfulwork/api": "workspace:*",
		"@joyfulwork/tailwind-config": "workspace:*",
		"@joyfulwork/tsconfig": "workspace:*",
		"@testing-library/react-native": "^12.8.1",
		"@types/babel__core": "^7.20.5",
		"@types/jest": "^29.5.14",
		"@types/react": "catalog:react18",
		"jest": "^29.7.0",
		"jest-expo": "^51.0.4",
		"tailwindcss": "catalog:",
		"typescript": "catalog:"
	}
}
